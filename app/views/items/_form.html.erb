<%= form_for [user, item] do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter New To-Do Item' %>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>



